<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="login-container">  
    
    <div class="login-box">
        <h2 class="fw-bold">LOGIN AS</h2>
        <br>
        <!-- Role Selection Buttons -->
        <div class="role-selection">
            <button class="role-btn admin" onclick="selectRole('admin')">ADMIN</button>
            <button class="role-btn teacher-role" onclick="selectRole('teacher')">TEACHER</button>
            <button class="role-btn student" onclick="selectRole('student')">STUDENT</button>
        </div>
        
        <!-- Login Form -->
        <form id="loginForm">
            <input type="hidden" id="role" name="role" value="admin">

            <div class="input-group">
                <i class="fa-solid fa-user"></i>
                <input type="text" id="username" name="username" placeholder="USERNAME" required>
            </div>

            <div class="input-group">
                <i class="fa-solid fa-lock"></i>
                <input type="password" id="password" name="password" placeholder="PASSWORD" required>
            </div>
            <br>
            <button type="submit" class="btn-login" onclick="login({username, password, role})">LOGIN</button>
        </form>
    </div>
</div>
