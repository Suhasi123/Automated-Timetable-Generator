<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Timetable Generation</title>
</head>
<body>
    <a href="/admin/dashboard">Home</a>
    <h2>Timetable Generation</h2>
    <form method="GET" action="/timetable/generate" onsubmit="return validateForm()">
        <label for="days">Days:</label>
        <input type="number" id="days">
        <br><br>
        <label for="per_day">Periods per day:</label>
        <input type="number" id="per_day">
        <br><br>
        <button>Generate</button>
    </form>
</body>
<script>
    const maxAlloc = <%= max_alloc %>; 
    function validateForm() {
        const days = parseInt(document.getElementById("days").value);
        const perDay = parseInt(document.getElementById("per_day").value);
        const totalSlots = days * perDay;

        if (totalSlots < maxAlloc) {
            alert(`Total slots (${totalSlots}) must be at least ${maxAlloc}. Please increase days or periods.`);
            return false;
        }
        return true;
    }
</script>
</html>