
<% layout("/layouts/boilerplate.ejs") %>

<body>
<div class="dashboard-container">
    <!-- Sidebar Navigation -->
    <%- include("includes/admin_sidebar.ejs") %>

    <!-- Main Content -->
    <div class="content">
        <h1>Class Management</h1>
        <p>Manage all classes here...</p>

        <!-- Add Class Button (Opens Modal) -->
        <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addClassModal">
            <i class="bi bi-plus-circle"></i> &nbsp; Add New Class
        </button>

        <div class="table-container">
            <table class="table bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Class Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% classes.forEach(cl => { %>
                        <tr>
                            <td><%= cl.class_id %></td>
                            <td><%= cl.class_name %></td>
                            <td style="display: flex;">
                                <!-- Edit Button -->
                                <button class="btn btn-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#editClassModal<%= cl.class_id %>">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </button>
    
                                <!-- Delete Form -->
                                <form method="POST" action="/class/<%= cl.class_id %>/delete?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this class?');">
                                    <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <!-- Add Class Modal -->
        <div class="modal fade" id="addClassModal" tabindex="-1" aria-labelledby="addClassModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addClassModalLabel">Add New Class</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/class/new" method="POST">
                            <div class="mb-3">
                                <label for="className" class="form-label"><i class="bi bi-building"></i> Class Name:</label>
                                <input type="text" class="form-control" name="class_name" id="className" required>
                            </div>
                            <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Save Class</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Class Modals (For Each Class) -->
        <% classes.forEach(cl => { %>
        <div class="modal fade" id="editClassModal<%= cl.class_id %>" tabindex="-1" aria-labelledby="editClassModalLabel<%= cl.class_id %>" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editClassModalLabel<%= cl.class_id %>">Edit Class</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/class/<%= cl.class_id %>?_method=PATCH" method="POST">
                            <div class="mb-3">
                                <label for="editClassName<%= cl.class_id %>" class="form-label"><i class="bi bi-building"></i> Class Name:</label>
                                <input type="text" class="form-control" name="class_name" id="editClassName<%= cl.class_id %>" value="<%= cl.class_name %>" required>
                            </div>
                            <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Update Class</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>   
    </div>
</div>
</body>
