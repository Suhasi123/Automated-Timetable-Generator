
<% layout("/layouts/boilerplate.ejs") %>
<style>
        .table-container {
            background: white !important;
            border-radius: 8px !important;
            padding: 15px !important;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1) !important;
        }
        .table thead {  
            background-color: #005C9C !important;
            color: white !important;
        }
        thead tr th {
            font-size: large;
        }
        .table tbody tr:hover {
            background-color: #f5faff !important;
        }
        .btn-edit {
            background-color: #007bff !important;
            color: white !important;
        }
        .btn-delete {
            background-color: #dc3545 !important;
            color: white !important;
        }

</style>
<body>
<div class="dashboard-container">
    <!-- Sidebar Navigation -->
    <div class="sidebar">
        <h4 class="text-center mb-3"><i class="bi bi-person-circle"></i> Admin Panel</h4>
        <!-- <a href="/admin/dashboard" class="fw-bold" style="font-size: 20px;"> Dashboard</a> -->
        <a href="/admin/dashboard"><i class="bi bi-house-door-fill"></i> Dashboard</a>
        <a href="/admin/users"><i class="bi bi-people"></i> User Details</a>
        <a href="/class"><i class="bi bi-building"></i> Class Details</a>
        <a href="/room"><i class="bi bi-door-closed"></i> Room Details</a>
        <a href="/subject"><i class="bi bi-book"></i> Subject Details</a>
        <a href="/teacher"><i class="bi bi-person-badge"></i> Teacher Details</a>
        <a href="/timing"><i class="bi bi-clock"></i> Timing Details</a>
        <a href="/timetable"><i class="bi bi-calendar-check"></i> Generate Timetable</a>
        <a href="/timetable/saved"><i class="bi bi-save2"></i> Saved Timetable</a>
        <a href="#"><i class="bi bi-gear"></i> Profile & Settings</a>
        <a href="/logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h1>Class Management</h1>
        <p>Manage all classes here...</p>

        <!-- Add Class Button (Opens Modal) -->
        <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addClassModal">
            <i class="bi bi-plus-circle"></i> &nbsp; Add New Class
        </button>

        <div class="table-container">
            <table class="table bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Class Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% classes.forEach(cl => { %>
                        <tr>
                            <td><%= cl.class_id %></td>
                            <td><%= cl.class_name %></td>
                            <td style="display: flex;">
                                <!-- Edit Button -->
                                <button class="btn btn-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#editClassModal<%= cl.class_id %>">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </button>
    
                                <!-- Delete Form -->
                                <form method="POST" action="/class/<%= cl.class_id %>/delete?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this class?');">
                                    <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <!-- Add Class Modal -->
        <div class="modal fade" id="addClassModal" tabindex="-1" aria-labelledby="addClassModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addClassModalLabel">Add New Class</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/class/new" method="POST">
                            <div class="mb-3">
                                <label for="className" class="form-label"><i class="bi bi-building"></i> Class Name:</label>
                                <input type="text" class="form-control" name="class_name" id="className" required>
                            </div>
                            <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Save Class</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Class Modals (For Each Class) -->
        <% classes.forEach(cl => { %>
        <div class="modal fade" id="editClassModal<%= cl.class_id %>" tabindex="-1" aria-labelledby="editClassModalLabel<%= cl.class_id %>" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editClassModalLabel<%= cl.class_id %>">Edit Class</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/class/<%= cl.class_id %>?_method=PATCH" method="POST">
                            <div class="mb-3">
                                <label for="editClassName<%= cl.class_id %>" class="form-label"><i class="bi bi-building"></i> Class Name:</label>
                                <input type="text" class="form-control" name="class_name" id="editClassName<%= cl.class_id %>" value="<%= cl.class_name %>" required>
                            </div>
                            <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Update Class</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>   
    </div>
</div>
</body>
