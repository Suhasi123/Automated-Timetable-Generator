<% layout("/layouts/boilerplate.ejs") %>

<body>
<div class="dashboard-container">
    <!-- Sidebar Navigation -->
    <%- include("includes/admin_sidebar.ejs") %>

    <!-- Main Content -->
    <div class="content">
        <h1>User Management</h1>
        <p>Manage all users here...</p>
        <!-- <a href="/admin/add-user" class="btn"> Add New User</a> -->
        <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addUserModal"> <i class="bi bi-person-plus-fill"></i> &nbsp;Add User</button>

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.username %></td>
                            <td><%= user.role %></td>
                            <td style="display: flex;">
                                <!-- <form method="GET" action="/admin/edit-user/<%= user.id %>">
                                    <button class="btn btn-edit btn-sm " style="margin-right: 10px;" data-id="<%= user.id %>"><i class="bi bi-pencil-square"></i> Edit</button>
                                </form> -->
                                <button class="btn btn-primary btn-sm" style="margin-right: 10px;" data-bs-toggle="modal" data-bs-target="#editUserModal<%= user.id %>">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </button>
                                <form method="POST" action="/admin/delete-user/<%= user.id %>?_method=DELETE">
                                    <button onclick="return confirm('Are you sure you want to delete this user?');" class="btn btn-delete btn-sm" data-id="<%= user.id %>"><i class="bi bi-trash"></i> Delete</button>
                                </form>
                            </td>
                        </tr>
                        <!-- Edit User Modal -->
                        <div class="modal fade" id="editUserModal<%= user.id %>" tabindex="-1" aria-labelledby="editUserModalLabel<%= user.id %>" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Edit User</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form action="/admin/edit-user/<%= user.id %>" method="POST">
                                            <div class="mb-3">
                                                <label for="role<%= user.id %>" class="form-label"><i class="bi bi-people"></i>Role:</label>
                                                <input type="text" class="form-control" name="role" id="role<%= user.id %>" value="<%= user.role %>" readonly>
                                            </div>

                                            <div class="mb-3">
                                                <label for="username<%= user.id %>" class="form-label"><i class="bi bi-person"></i> Username:</label>
                                                <input type="text" class="form-control" name="username" id="username<%= user.id %>" value="<%= user.username %>" required>
                                            </div>

                                            <% if (user.role === "teacher") { %>
                                                <div class="mb-3">
                                                    <label for="teacher_name<%= user.id %>" class="form-label"><i class="bi bi-person-badge"> </i>Teacher Name:</label>
                                                    <input type="text" class="form-control" name="teacher_name" id="teacher_name<%= user.id %>" value="<%= user.teacher_name %>" required>
                                                </div>
                                            <% } %>

                                            <% if (user.role === "student") { %>
                                                <div class="mb-3">
                                                    <label for="class_id<%= user.id %>" class="form-label"><i class="bi bi-mortarboard"></i> Class:</label>
                                                    <select class="form-control" name="class_id" required>
                                                        <option value="<%= user.class_id %>"><%= user.class_name %></option>
                                                        <% classes.forEach(function(classItem) { %>
                                                            <option value="<%= classItem.class_id %>"><%= classItem.class_name %></option>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            <% } %>

                                            <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Update User</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addUserModalLabel">Add New User</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/admin/add-user" method="POST">
                            <!-- Role Selection -->
                            <div class="mb-3">
                                <label for="role" class="form-label"> <i class="bi bi-people"></i> Role:</label>
                                <select class="form-control" name="role" id="role" onchange="toggleClassField()" required>
                                    <option value="">--Select Role--</option>
                                    <option value="teacher">Teacher</option>
                                    <option value="student">Student</option>
                                </select>
                            </div>

                            <!-- Username Field -->
                            <div class="mb-3">
                                <label for="username" class="form-label"><i class="bi bi-person"></i> Username:</label>
                                <input type="text" class="form-control" name="username" id="username" required>
                            </div>
        
                            <!-- Password Field -->
                            <div class="mb-3">
                                <label for="password" class="form-label"><i class="bi bi-lock"></i> Password:</label>
                                <input type="password" class="form-control" name="password" id="password" required>
                            </div>
        
                            <!-- Class Selection (For Students) -->
                            <div class="mb-3" id="classField" style="display: none;">
                                <label class="form-label"><i class="bi bi-mortarboard"></i> Class:</label>
                                <select class="form-control" name="class_id">
                                    <option value="">-- Select Class --</option>
                                    <% classes.forEach(function(classItem) { %>
                                        <option value="<%= classItem.class_id %>"><%= classItem.class_name %></option>
                                    <% }); %>
                                </select>
                            </div>
        
                            <!-- Teacher Name Field (For Teachers) -->
                            <div class="mb-3" id="nameField" style="display: none;">
                                <label for="teacher_name" class="form-label"><i class="bi bi-person-badge"></i>Teacher Name:</label>
                                <input type="text" class="form-control" name="teacher_name" id="teacher_name">
                            </div>
        
                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> &nbsp; Save User</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>      
    </div>
</div>

<!-- JavaScript to Handle Field Visibility -->
<script>
    function toggleClassField() {
        const role = document.getElementById("role").value;
        document.getElementById("classField").style.display = (role === "student") ? "block" : "none";
        document.getElementById("nameField").style.display = (role === "teacher") ? "block" : "none";
    }
    </script>
</body>
