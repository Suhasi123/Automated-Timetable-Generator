
<% layout("/layouts/boilerplate.ejs") %>
<style>
    
        .table-container {
            background: white !important;
            border-radius: 8px !important;
            padding: 15px !important;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1) !important;
        }
        .table thead {  
            background-color: #005C9C !important;
            color: white !important;
        }
        thead tr th {
            font-size: large;
        }
        .table tbody tr:hover {
            background-color: #f5faff !important;
        }
        .btn-edit {
            background-color: #007bff !important;
            color: white !important;
        }
        .btn-delete {
            background-color: #dc3545 !important;
            color: white !important;
        }

</style>
<body>
<div class="dashboard-container">
    <!-- Sidebar Navigation -->
    <div class="sidebar">
        <h4 class="text-center mb-3"><i class="bi bi-person-circle"></i> Admin Panel</h4>
        <!-- <a href="/admin/dashboard" class="fw-bold" style="font-size: 20px;"> Dashboard</a> -->
        <a href="/admin/dashboard"><i class="bi bi-house-door-fill"></i> Dashboard</a>
        <a href="/admin/users"><i class="bi bi-people"></i> User Details</a>
        <a href="/class"><i class="bi bi-building"></i> Class Details</a>
        <a href="/room"><i class="bi bi-door-closed"></i> Room Details</a>
        <a href="/subject"><i class="bi bi-book"></i> Subject Details</a>
        <a href="/teacher"><i class="bi bi-person-badge"></i> Teacher Details</a>
        <a href="/timing"><i class="bi bi-clock"></i> Timing Details</a>
        <a href="/timetable"><i class="bi bi-calendar-check"></i> Generate Timetable</a>
        <a href="/timetable/saved"><i class="bi bi-save2"></i> Saved Timetable</a>
        <a href="#"><i class="bi bi-gear"></i> Profile & Settings</a>
        <a href="/logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h1>Subject Management</h1>
        <p>Manage all subjects here...</p>

        <!-- Add Subject Button (Opens Modal) -->
        <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addSubjectModal">
            <i class="bi bi-plus-circle"></i> &nbsp; Add New Subject
        </button>

        <div class="table-container">
            <table class="table bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Subject Name</th>            
                        <th>Max Allocations</th>
                        <th>Class Id</th>
                        <th>Duration</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% subjects.forEach(sub => { %>
                        <tr>              
                            <td><%= sub.subject_id %></td>
                            <td><%= sub.subject_name %></td>
                            <td><%= sub.max_allocations %></td>
                            <td><%= sub.class_id %></td>
                            <td><%= sub.duration %></td>
                            <td style="display: flex;">
                                <!-- Edit Button -->
                                <button class="btn btn-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#editSubjectModal<%= sub.subject_id %>">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </button>
    
                                <!-- Delete Form -->
                                <form method="POST" action="/subject/<%= sub.subject_id %>/delete?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this subject?');">
                                    <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <!-- Add Subject Modal -->
        <div class="modal fade" id="addSubjectModal" tabindex="-1" aria-labelledby="addSubjectModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addSubjectModalLabel">Add New Subject</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/subject/new" method="POST">
                            <div class="mb-3">
                                <label for="subject_name" class="form-label"><i class="bi bi-book"></i> Subject Name:</label>
                                <input type="text" class="form-control" name="subject_name" id="subject_name" required>
                                <label for="max_allocations" class="form-label"> <i class="bi bi-hash"></i> Max Allocations:</label>
                                <input type="text" class="form-control" name="max_allocations" id="max_allocations" required>
                                <label class="form-label"><i class="bi bi-building"></i> Class:</label>
                                <select class="form-control" name="class_id">
                                    <option value="">-- Select Class --</option>
                                    <% classes.forEach(function(classItem) { %>
                                        <option value="<%= classItem.class_id %>"><%= classItem.class_name %></option>
                                    <% }); %>
                                </select>
                                <label class="form-label"><i class="bi bi-hourglass-split"></i> Duration:</label>
                                <select class="form-control" name="duration">
                                    <option value="">-- Select Duration --</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Save Subject</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Subject Modals (For Each Room) -->
        <% subjects.forEach(sub => { %>
        <div class="modal fade" id="editSubjectModal<%= sub.subject_id %>" tabindex="-1" aria-labelledby="editSubjectModalLabel<%= sub.subject_id %>" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editSubjectModalLabel<%= sub.subject_id %>">Edit Subject</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/subject/<%= sub.subject_id %>?_method=PATCH" method="POST">
                            <div class="mb-3">
                                <label for="editSubjectName<%= sub.subject_id %>" class="form-label"><i class="bi bi-book"></i> Subject Name:</label>
                                <input type="text" class="form-control" name="subject_name" id="editSubjectName<%= sub.subject_id %>" value="<%= sub.subject_name %>" required>
                                <label for="editSubjectName<%=sub.subject_id %>" class="form-label"> <i class="bi bi-hash"></i> Max Allocations:</label>
                                <input type="text" class="form-control" name="max_allocations" id="editSubjectName<%= sub.subject_id %>" value="<%= sub.max_allocations %>" required>
                                <label class="form-label"><i class="bi bi-building"></i> Class:</label>
                                <select class="form-control" name="class_id">
                                    <option value="<%= sub.class_id %>"><%= sub.class_name %></option>
                                    <% classes.forEach(function(classItem) { %>
                                        <option value="<%= classItem.class_id %>"><%= classItem.class_name %></option>
                                    <% }); %>
                                </select>
                                <label class="form-label"><i class="bi bi-hourglass-split"></i> Duration:</label>
                                <select class="form-control" name="duration">
                                    <option value="<%= sub.duration %>"><%= sub.duration %></option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Update Subject</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>   
    </div>
</div>
</body>
