    </div>

    <!-- Main Content -->
    <div class="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm p-3" style="height: 3rem;">
            <div class="container-fluid">
                <h3 class="fw-bold">Dashboard</h3>
            </div>
        </nav>

        <!-- Dashboard Cards -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card ">
                    <div class="card-body">
                        <h5 class="card-title">Total Classes</h5>
                        <p class="card-text">View & manage class details.</p>
                        <a href="/class" class="btn btn-info">View Details</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card ">
                    <div class="card-body">
                        <h5 class="card-title">Total Teachers</h5>
                        <p class="card-text">View & manage teacher details.</p>
                        <a href="/teacher" class="btn btn-info">View Details</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card ">
                    <div class="card-body">
                        <h5 class="card-title">Saved Timetables</h5>
                        <p class="card-text">Access previously generated timetables.</p>
                        <a href="/timetable/saved" class="btn btn-info">View Timetables</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Generate Timetable Button -->
        <div class="mt-4">
            <form method="GET" action="/timetable">
                <button class="btn btn-danger btn-lg"><i class="bi bi-calendar-check"></i> Generate Timetable</button>
            </form>
        </div>

    </div>
    </div>
